#!/bin/bash

gh repo list ${1-""} -L 1000 | column -s$'\t' -t | fzf             \
    --bind='enter:execute(git clone https://github.com/{1})+abort' \
    --bind=',:execute(xdg-open https://github.com/{1} &)+abort'    \
    --preview=""                                                   \
    --header='browse , clone â†µ '

